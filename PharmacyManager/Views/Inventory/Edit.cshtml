@model PharmacyManager.Models.Medicine
@{
    ViewData["Title"] = "Edit Medicine";
}

<div class="page-header">
    <h2>Edit Medicine</h2>
</div>

<div class="form-container">
    <div asp-validation-summary="ModelOnly" class="alert alert-error"></div>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="MedicineId" />
        <div class="form-row">
            <div class="form-group">
                <label asp-for="Name">Medicine Name</label>
                <input asp-for="Name" />
                <span asp-validation-for="Name" class="field-error"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category">Category</label>
                <input asp-for="Category" />
                <span asp-validation-for="Category" class="field-error"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group">
                <label asp-for="Manufacturer">Manufacturer</label>
                <input asp-for="Manufacturer" />
                <span asp-validation-for="Manufacturer" class="field-error"></span>
            </div>
            <div class="form-group">
                <label asp-for="BatchNumber">Batch Number</label>
                <input asp-for="BatchNumber" />
                <span asp-validation-for="BatchNumber" class="field-error"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group">
                <label asp-for="ExpiryDate">Expiry Date</label>
                <input asp-for="ExpiryDate" type="date" />
                <span asp-validation-for="ExpiryDate" class="field-error"></span>
            </div>
            <div class="form-group">
                <label asp-for="StockQuantity">Stock Quantity</label>
                <input asp-for="StockQuantity" type="number" min="0" />
                <span asp-validation-for="StockQuantity" class="field-error"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group">
                <label asp-for="UnitPrice">Unit Price</label>
                <input asp-for="UnitPrice" type="number" step="0.01" min="0" />
                <span asp-validation-for="UnitPrice" class="field-error"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description">Description</label>
                <input asp-for="Description" />
                <span asp-validation-for="Description" class="field-error"></span>
            </div>
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Update Medicine</button>
            <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
