@model PharmacyManager.Models.Medicine
@{
    ViewData["Title"] = "Delete Medicine";
}

<div class="page-header">
    <h2>Delete Medicine</h2>
</div>

<div class="alert alert-error">
    Are you sure you want to delete this medicine? This action cannot be undone.
</div>

<div class="detail-card">
    <div class="detail-row">
        <span class="detail-label">Name</span>
        <span class="detail-value">@Model.Name</span>
    </div>
    <div class="detail-row">
        <span class="detail-label">Category</span>
        <span class="detail-value">@Model.Category</span>
    </div>
    <div class="detail-row">
        <span class="detail-label">Batch Number</span>
        <span class="detail-value">@Model.BatchNumber</span>
    </div>
    <div class="detail-row">
        <span class="detail-label">Stock Quantity</span>
        <span class="detail-value">@Model.StockQuantity</span>
    </div>
    <div class="detail-row">
        <span class="detail-label">Unit Price</span>
        <span class="detail-value">@Model.UnitPrice.ToString("C2")</span>
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="MedicineId" />
    <div class="form-actions">
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
    </div>
</form>
